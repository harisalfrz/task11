              <p>FullStack Developer</p>
            </div>
          </div>
        </div>
      </section>

       <section class="project bg-white pt-5">
        <h1 class="text-center">
          MY PROJECT
        </h1>
        <p class="text-center">
        </p>
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 d-flex flex-wrap-reverse flex-row-reverse justify-content-center g-4 p-3">
          {{#each contentBlog}}
            <div class="col">
              <div class="card h-100">
                <img
                  src="{{#if inputImg}}{{this.inputImg}}{{else}}{{/if}}"
                  class="card-img-top img-thumbnail img-fluid object-fit-cover"
                  alt="thumb-img"
                  style="height: 300px"
                />
                <div class="card-body">
                  <h5 class="card-title">
                    <a
                      class="text-decoration-none"
                      href="/blog-content/{{@index}}"
                    >
                      {{this.projectName}}
                    </a>
                  </h5>
                  <span class="text-body-tertiary">
                    Author:
                    {{this.authorName}}
                    |
                    {{this.durasi}}
                  </span>
                  <p class="card-text overflow-hidden" style="height: 15vh;">
                    {{this.description}}
                  </p>
                  <div class="techstack">
                    {{#if this.inputNodejs}}
                      <i class="fa-brands fa-node-js fs-4 me-2"></i>
                    {{else}}

                    {{/if}}
                    {{#if this.inputReactjs}}
                      <i class="fa-brands fa-react fs-4 me-2"></i>
                    {{else}}

                    {{/if}}
                    {{#if this.inputVuejs}}
                      <i class="fa-brands fa-vuejs fs-4 me-2"></i>
                    {{else}}

                    {{/if}}
                    {{#if this.inputJavascript}}
                      <i class="fa-brands fa-js fs-4 me-2"></i>
                    {{else}}

                    {{/if}}
                  </div>
                </div>
                <div
                  class="card-footer d-flex justify-content-between align-items-center"
                >
                  <small class="text-body-secondary">
                    {{this.postedAt}}
                  </small>
                  <div>
                    <a class="btn btn-danger" href="/update-project/{{@index}}">
                      Update
                    </a>
                    <a class="btn btn-danger" href="/delete-blog/{{@index}}">
                      Delete
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </section>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
